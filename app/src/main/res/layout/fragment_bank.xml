<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightText"
    tools:context="cooldudes.stalkmarket.ui.fragment.BankFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/money"
            android:text="$300"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            style="?android:attr/borderlessButtonStyle"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/darkGreen"
            android:background="@color/lightText"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank"
                android:textSize="30dp"
                android:textColor="@color/darkGreen"
                android:fontFamily="@font/poppins_medium"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MY ACCOUNTS &amp; BUNDLES"
                android:fontFamily="@font/poppins_medium"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/darkGreen"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/cardGreen"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginRight="20dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:minWidth="100dp"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:paddingHorizontal="20dp"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="savings"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/darkGreen"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:src="@drawable/cashgreen"/>
                        <TextView
                            android:id="@+id/savings1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$300"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/darkGreen"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/cardGreen"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginRight="20dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:minWidth="100dp"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:paddingHorizontal="20dp"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="savings"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/darkGreen"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:src="@drawable/cashgreen"/>
                        <TextView
                            android:id="@+id/savings2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$300"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/darkGreen"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/cardGreen"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:minWidth="100dp"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:paddingHorizontal="20dp"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="savings"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/darkGreen"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:src="@drawable/cashgreen"/>
                        <TextView
                            android:id="@+id/savings3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$300"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/darkGreen"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OFFERED BUNDLES"
                android:fontFamily="@font/poppins_medium"
                android:textSize="18dp"
                android:layout_marginTop="40dp"
                android:textColor="@color/darkGreen"/>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="20dp"
                    android:background="@drawable/greenoutline"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/veggiemf1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/veggiemfbuy"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/veggiemf"
                        android:text="VEGGIE"
                        android:textSize="20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/darkGreen"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:background="@drawable/mgpill"
                            style="?android:attr/borderlessButtonStyle"
                            android:textColor="@color/lightText"
                            android:textSize="10dp"
                            android:paddingHorizontal="20dp"
                            android:layout_marginRight="0dp"
                            android:layout_alignParentRight="true"
                            android:text="+ \u00A0 \u00A0 BUY FOR $150"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="includes 1 fern,  1 purple pepper, 1 carrot"
                            android:textSize="10dp"
                            android:lineHeight="10sp"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="50dp"
                            android:textColor="@color/middleGreen"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="20dp"
                    android:background="@drawable/greenoutline"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/fruitmf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fruitmf"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/veggiemf"
                        android:text="FRUITS"
                        android:textSize="20dp"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/darkGreen"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:background="@drawable/mgpill"
                            style="?android:attr/borderlessButtonStyle"
                            android:textColor="@color/lightText"
                            android:textSize="10dp"
                            android:paddingHorizontal="20dp"
                            android:layout_marginRight="0dp"
                            android:layout_alignParentRight="true"
                            android:text="+ \u00A0 \u00A0 BUY FOR $150"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="includes 1 tomato,  1 mango, 1 pear"
                            android:textSize="10dp"
                            android:lineHeight="10sp"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="50dp"
                            android:textColor="@color/middleGreen"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>