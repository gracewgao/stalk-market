<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.GardenFragment"
    android:background="@color/lightText">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="top">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/money"
                android:text="$300"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                style="?android:attr/borderlessButtonStyle"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/darkGreen"
                android:background="@color/lightText"/>
            <LinearLayout
                android:id="@+id/title"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:id="@+id/text_dashboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Your Garden"
                    android:layout_marginBottom="30dp"
                    android:textColor="@color/darkGreen"
                    android:textSize="36dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/row1"
                android:layout_below="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/plant1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/green1"
                    android:layout_marginRight="10dp"
                    />
                <ImageView
                    android:id="@+id/plant2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/green1"
                    android:layout_marginRight="10dp"
                    />
                <ImageView
                    android:id="@+id/plant3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/green1"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/row2"
                android:layout_below="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:id="@+id/plant4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/green1"
                    android:layout_marginRight="10dp"
                    />
                <ImageView
                    android:id="@+id/plant5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/green1"
                    android:layout_marginRight="10dp"
                    />
                <ImageView
                    android:id="@+id/plant6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/green1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/row2"
                android:id="@id/row3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/plant7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/green1"
                    android:layout_marginRight="10dp"
                    />
                <ImageView
                    android:id="@+id/plant8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/green1"
                    android:layout_marginRight="10dp"
                    />
                <ImageView
                    android:id="@+id/plant9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/green1"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/row3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/plant10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/green1"
                    android:layout_marginRight="10dp"
                    />
                <ImageView
                    android:id="@+id/plant11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/green1"
                    android:layout_marginRight="10dp"
                    />
                <ImageView
                    android:id="@+id/plant12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/green1"
                    />
            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/harvest"
                android:backgroundTint="@color/lightText"
                android:layout_alignParentLeft="true"
                android:layout_above="@+id/nav_view"
                android:text="harvest"
                android:textColor="@color/darkGreen"
                android:fontFamily="@font/poppins"
                android:textAllCaps="false"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginBottom="20dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/water"
                android:backgroundTint="@color/lightText"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="water"
                android:textColor="@color/darkGreen"
                android:fontFamily="@font/poppins"
                android:textAllCaps="false"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginBottom="20dp"
                />

        </RelativeLayout>

</FrameLayout>