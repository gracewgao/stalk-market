<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lightText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/darkGreen"
            android:fontFamily="@font/poppins"
            android:paddingLeft="50dp"
            android:paddingRight="40dp"
            android:text="stalkmarket"
            android:textSize="24dp"
            android:textColor="@color/lightText" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MY CROPS"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/darkGreen"
                android:fontFamily="@font/poppins"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/lightText"
                    app:strokeColor="@color/darkGreen"
                    app:strokeWidth="2dp"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/plant1_img"
                            android:layout_width="50dp"
                            android:layout_height="70dp"
                            android:src="@drawable/fern4"
                            android:layout_marginLeft="15dp"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="15dp">
                            <TextView
                                android:id="@+id/plant1_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="fern"
                                android:textSize="12dp"
                                android:fontFamily="@font/poppins_medium"/>
                            <TextView
                                android:id="@+id/plant1_amt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 pots"
                                android:textSize="12dp"
                                android:fontFamily="@font/poppins_bold"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/lightText"
                    app:strokeColor="@color/darkGreen"
                    app:strokeWidth="2dp"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/plant2_img"
                            android:layout_width="50dp"
                            android:layout_height="70dp"
                            android:src="@drawable/fern4"
                            android:layout_marginLeft="15dp"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="15dp">
                            <TextView
                                android:id="@+id/plant2_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="fern"
                                android:textSize="12dp"
                                android:fontFamily="@font/poppins_medium"/>
                            <TextView
                                android:id="@+id/plant2_amt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 pots"
                                android:textSize="12dp"
                                android:fontFamily="@font/poppins_bold"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/lightText"
                    app:strokeColor="@color/darkGreen"
                    app:strokeWidth="2dp"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/plant3_img"
                            android:layout_width="50dp"
                            android:layout_height="70dp"
                            android:src="@drawable/fern4"
                            android:layout_marginLeft="15dp"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="15dp">
                            <TextView
                                android:id="@+id/plant3_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="fern"
                                android:textSize="12dp"
                                android:fontFamily="@font/poppins_medium"/>
                            <TextView
                                android:id="@+id/plant3_amt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 pots"
                                android:textSize="12dp"
                                android:fontFamily="@font/poppins_bold"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/lightText"
                    app:strokeColor="@color/darkGreen"
                    app:strokeWidth="2dp"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/plant4_img"
                            android:layout_width="50dp"
                            android:layout_height="70dp"
                            android:src="@drawable/fern4"
                            android:layout_marginLeft="15dp"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="15dp">
                            <TextView
                                android:id="@+id/plant4_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="fern"
                                android:textSize="12dp"
                                android:fontFamily="@font/poppins_medium"/>
                            <TextView
                                android:id="@+id/plant4_amt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 pots"
                                android:textSize="12dp"
                                android:fontFamily="@font/poppins_bold"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BUY CROPS">

                </com.google.android.material.tabs.TabItem>
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELL CROPS">

                </com.google.android.material.tabs.TabItem>
            </com.google.android.material.tabs.TabLayout>

            <!-- Refreshes Requests -->
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipe_refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fadingEdge="horizontal"
                    android:fadingEdgeLength="50dp"
                    android:fillViewport="false"
                    android:requiresFadingEdge="vertical">

                </androidx.recyclerview.widget.RecyclerView>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
