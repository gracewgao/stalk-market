<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lightText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/darkGreen"
            android:fontFamily="@font/poppins"
            android:paddingLeft="50dp"
            android:paddingRight="40dp"
            android:text="stalkmarket"
            android:textSize="24dp"
            android:textColor="@color/lightText" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MY CROPS"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/darkGreen"
                android:fontFamily="@font/poppins"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/lightText"
                    app:strokeColor="@color/darkGreen"
                    app:strokeWidth="2dp"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="70dp"
                            android:src="@drawable/fern4"
                            android:layout_marginLeft="15dp"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="15dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="fern"
                                android:textSize="12dp"
                                android:fontFamily="@font/poppins_medium"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 pots"
                                android:textSize="12dp"
                                android:fontFamily="@font/poppins_bold"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/lightText"
                    app:strokeColor="@color/darkGreen"
                    app:strokeWidth="2dp"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="70dp"
                            android:src="@drawable/fern4"
                            android:layout_marginLeft="15dp"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="15dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="fern"
                                android:textSize="12dp"
                                android:fontFamily="@font/poppins_medium"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 pots"
                                android:textSize="12dp"
                                android:fontFamily="@font/poppins_bold"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
            <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabTextAppearance="@style/tab_text"
                app:tabTextColor="@color/offGreen"
                app:tabSelectedTextColor="@color/darkGreen"
                >
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BUY CROPS">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/main_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="25dp"
                        app:cardCornerRadius="18dp">

                        <LinearLayout
                            android:id="@+id/cardback"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/missioncardgrey">
                            <ImageView
                                android:id="@+id/image1"
                                android:layout_width="30dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/red4"/>
                            <LinearLayout
                                android:layout_width="230dp"
                                android:layout_height="200px"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/card_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="10dp"
                                    android:text="tomatoes"
                                    android:textColor="@color/darkGreen"
                                    android:textSize="14dp"
                                    android:fontFamily="@font/poppins_semibold"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/card_price"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="5dp"
                                        android:textColor="@color/darkGreen"
                                        android:textFontWeight="500"
                                        android:fontFamily="@font/roboto_bold"
                                        android:textSize="18dp"
                                        android:text="$50"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginHorizontal="10dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="5dp"
                                        android:textColor="@color/darkGreen"
                                        android:textFontWeight="500"
                                        android:fontFamily="@font/roboto_bold"
                                        android:textSize="11dp"
                                        android:text="/ pot"/>
                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="wrap_content"
                                        android:paddingTop="5dp"
                                        android:src="@drawable/tag" />

                                </LinearLayout>
                            </LinearLayout>

                            <!-- Button to accept -->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <!-- Button to accept -->
                                <Button
                                    android:id="@+id/done_button"
                                    android:layout_width="200dp"
                                    android:layout_height="200dp"
                                    android:layout_marginVertical="5dp"
                                    android:layout_marginRight="5dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:background="@drawable/buy"
                                    android:textColor="#FEF5EF"
                                    android:textSize="30px"
                                    android:gravity="top|center"
                                    android:paddingTop="18dp"
                                    android:text="BUY"
                                    android:lineHeight="13dp"
                                    android:drawablePadding="-60dp"
                                    />

                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </com.google.android.material.tabs.TabItem>
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELL CROPS">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/sell_card1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="25dp"
                        app:cardCornerRadius="18dp">

                        <LinearLayout
                            android:id="@+id/sell_cardback1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/missioncardgrey">
                            <ImageView
                                android:id="@+id/sell_image1"
                                android:layout_width="30dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/red4"/>
                            <LinearLayout
                                android:layout_width="230dp"
                                android:layout_height="200px"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/sell_title1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="10dp"
                                    android:text="tomatoes"
                                    android:textColor="@color/darkGreen"
                                    android:textSize="14dp"
                                    android:fontFamily="@font/poppins_semibold"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/sell_price1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="5dp"
                                        android:textColor="@color/darkGreen"
                                        android:textFontWeight="500"
                                        android:fontFamily="@font/roboto_bold"
                                        android:textSize="18dp"
                                        android:text="$50"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginHorizontal="10dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="5dp"
                                        android:textColor="@color/darkGreen"
                                        android:textFontWeight="500"
                                        android:fontFamily="@font/roboto_bold"
                                        android:textSize="11dp"
                                        android:text="/ pot"/>
                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="wrap_content"
                                        android:paddingTop="5dp"
                                        android:src="@drawable/sell" />

                                </LinearLayout>
                            </LinearLayout>

                            <!-- Button to accept -->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <!-- Button to accept -->
                                <Button
                                    android:id="@+id/done_button"
                                    android:layout_width="200dp"
                                    android:layout_height="200dp"
                                    android:layout_marginVertical="5dp"
                                    android:layout_marginRight="5dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:background="@drawable/buy"
                                    android:textColor="#FEF5EF"
                                    android:textSize="30px"
                                    android:gravity="top|center"
                                    android:paddingTop="18dp"
                                    android:text="BUY"
                                    android:lineHeight="13dp"
                                    android:drawablePadding="-60dp"
                                    />

                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </com.google.android.material.tabs.TabItem>
            </com.google.android.material.tabs.TabLayout>

            <!-- Refreshes Requests -->
            <!-- <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipe_refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fadingEdge="horizontal"
                    android:fadingEdgeLength="50dp"
                    android:fillViewport="false"
                    android:requiresFadingEdge="vertical">

                </androidx.recyclerview.widget.RecyclerView>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout> -->
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
