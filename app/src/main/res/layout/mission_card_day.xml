    <!-- Information on product and request time sent out -->

    <androidx.cardview.widget.CardView
        android:id="@+id/main_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="18dp">

        <LinearLayout
            android:id="@+id/cardback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/missioncardgrey">
            <ImageView
                android:id="@+id/mission_icon"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp" />
            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="200px"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/card_time_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="tomatoes"
                    android:textColor="@color/darkGreen"
                    android:textSize="14dp"
                    android:fontFamily="@font/poppins_semibold"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/card_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/darkGreen"
                        android:textFontWeight="500"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="18dp"
                        android:text="$50"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/darkGreen"
                        android:textFontWeight="500"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="11dp"
                        android:text="/ pot"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:src="@drawable/tag" />

                </LinearLayout>
            </LinearLayout>

            <!-- Button to accept -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Button to accept -->
                <Button
                    android:id="@+id/done_button"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:background="@drawable/buy"
                    android:textColor="#FEF5EF"
                    android:textSize="30px"
                    android:gravity="top|center"
                    android:paddingTop="18dp"
                    android:text="BUY"
                    android:lineHeight="13dp"
                    android:drawablePadding="-60dp"
                    />

            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>